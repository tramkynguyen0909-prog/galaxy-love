<script>
/* Images */
const images=[
"https://i.ibb.co/HTzK9WS7/IMG-1767338845296-1767346643020.jpg",
"https://i.ibb.co/4wqxynk4/IMG-1767338845393-1767346643127.jpg",
"https://i.ibb.co/mCnNsWDQ/IMG-1767338845479-1767346643246.jpg",
"https://i.ibb.co/WN3GxJ0n/IMG-1767338844659-1767346642083.jpg",
"https://i.ibb.co/DH0ZdLVG/IMG-1767338844743-1767346642240.jpg",
"https://i.ibb.co/NdvGRxL6/IMG-1767338844819-1767346642404.jpg",
"https://i.ibb.co/gZMHrMBD/IMG-1767338844943-1767346642523.jpg",
"https://i.ibb.co/qFPhm43K/IMG-1767338845063-1767346642639.jpg",
"https://i.ibb.co/FbLsqmvC/IMG-1767338845147-1767346642758.jpg",
"https://i.ibb.co/G3bPxW72/IMG-1767338845225-1767346642910.jpg",
"https://i.ibb.co/FbF7CSm5/att-d-CZW20xprtx-RQo-Vg-OO7-Q6n-B1-Ys-DVXJXD-Lbmye7-NGJE-jpg.jpg"
];

const gallery=document.getElementById("gallery");
const zoom=document.getElementById("zoom");
const zoomImg=zoom.querySelector("img");

images.forEach(src=>{
  const img=document.createElement("img");
  img.src=src;
  img.onclick=()=>{
    zoom.style.display="flex";
    zoomImg.src=src;
  };
  gallery.appendChild(img);
});

/* Stars */
for(let i=0;i<140;i++){
  const s=document.createElement("div");
  s.className="star";
  s.style.left=Math.random()*100+"vw";
  s.style.animationDuration=3+Math.random()*5+"s";
  s.style.opacity=Math.random();
  document.body.appendChild(s);
}

/* Lyrics */
const lyrics=[
  "ðŸŽ¶ TÃ¬nh cá» yÃªu emâ€¦",
  "Phan Thá»‹ Yáº¿n Nhi Ã â€¦",
  "Giá»¯a muÃ´n ngÃ n ngÆ°á»iâ€¦",
  "Anh chá»‰ nhÃ¬n tháº¥y em",
  "Tim anh láº¡c nhá»‹p rá»“iâ€¦",
  "Anh yÃªu em máº¥t rá»“i ðŸ’–"
];
let li=0;
const lyricBox=document.getElementById("lyrics");
setInterval(()=>{
  lyricBox.style.opacity=0;
  setTimeout(()=>{
    lyricBox.innerText=lyrics[li];
    lyricBox.style.opacity=1;
    li=(li+1)%lyrics.length;
  },500);
},3500);

/* Music toggle */
const music=document.getElementById("music");
document.getElementById("musicBtn").onclick=()=>{
  music.paused ? music.play() : music.pause();
};

/* Explosion */
document.addEventListener("click",e=>{
  for(let i=0;i<20;i++){
    const p=document.createElement("div");
    p.className="particle";
    p.style.left=e.clientX+"px";
    p.style.top=e.clientY+"px";
    document.body.appendChild(p);
    const a=Math.random()*2*Math.PI;
    const s=Math.random()*80;
    p.animate([
      {transform:"translate(0,0)",opacity:1},
      {transform:`translate(${Math.cos(a)*s}px,${Math.sin(a)*s}px)`,opacity:0}
    ],{duration:600});
    setTimeout(()=>p.remove(),600);
  }
});

/* End screen */
setTimeout(()=>{
  document.getElementById("endLove").classList.add("showEnd");
},45000);
</script>

